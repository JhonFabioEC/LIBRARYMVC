@model LIBRARYMVC_TEST.Models.Author

@{
    ViewData["Title"] = "Eliminar Autor";
}

<div class="row">
    <h3 class="text-danger">¿Esta seguro de eliminar el autor?</h3>
    <div class="col-sm-4">
        <form asp-action="Delete" asp-controller="Authors" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-2">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control form-control-sm" asp-for="Name" type="text" disabled />
            </div>
            <div class="mb-2">
                <button class="btn btn-danger btn-sm w-25" type="submit"><i class="fa-solid fa-trash"></i> Eliminar</button>
                <a class="btn btn-dark btn-sm w-25" asp-action="Index" asp-controller="Authors"><i class="fa-solid fa-circle-chevron-left"></i> Atras</a>
            </div>
        </form>
    </div>
</div>